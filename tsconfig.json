{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*", "!lib/utils/server-only.ts"],
      "server-only": ["lib/utils/server-only.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "svgr.d.ts",

    ".next/types/**/*.ts",

    "**/*.ts",

    "**/*.tsx",
    "src/components/project/projectile/MotionCanvas.bak"
  ],
  "exclude": ["node_modules"]
}
